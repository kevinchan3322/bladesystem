VITE_SERVER= # 後端 API Server
# MongoDB Root Credentials (for initial setup and admin access)
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=change_this_admin_password_123

# Application Database Credentials (for application access)
MONGODB_USER=blade_user
MONGODB_PASSWORD=change_this_blade_password_123

# MongoDB Connection Settings
MONGODB_URI=localhost
MONGODB_PORT=27017
MONGODB_DB_NAME=bladesystem

# JWT Authentication
JWT_SECRET=change_this_to_a_secure_random_string_123
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=4000
NODE_ENV=development

# Timezone
TZ=Asia/Taipei

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# File Upload Settings
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads